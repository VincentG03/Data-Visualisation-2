{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Distribution of Qualifications by Gender", 
    "fontSize": 20
  },
  "width": 400,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/VincentG03/Data-Visualisation-2/refs/heads/main/data/T4.csv",
    "format": {"type": "csv"}
  },
  "mark": "bar",  
  "params": [
    {
      "name": "gender_param",
      "select": {"type": "point", "fields": ["Gender"]},
      "bind": "legend"
    }
  ],
  "encoding": {
    "y": {
      "field": "Qualification",
      "type": "nominal",
      "title": "Qualification"
    },
    "x": {
      "field": "Percentage",
      "type": "quantitative",
      "title": "Percentage",
      "scale": {
        "domain": [0, 100]
      }
    },
    "color": {
      "field": "Gender",
      "scale": {
        "domain": ["Male", "Female"],
        "range": ["#1f77b4", "#ff7f0e"]
      },
      "title": "Gender"
    },
    "opacity": {
      "condition": {"param": "gender_param", "value": 1},
      "value": 0.2
    }
  },
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}
