{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Qualifications by Gender",
  "width": 680,
  "height": 410,
  "data": {
    "url": "https://raw.githubusercontent.com/VincentG03/Data-Visualisation-2/refs/heads/main/data/T4.csv",
    "format": {"type": "csv"}
  },
  "selection": {
    "gender": {
      "type": "multi", 
      "fields": ["Gender"],
      "bind": "legend" 
    }
  },
  "transform": [
    {
      "filter": {
        "selection": "gender" 
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Qualification",
      "type": "nominal",
      "title": "Qualification"
    },
    "x": {
      "field": "Number of Holders",
      "type": "quantitative",
      "title": "Number of Holders"
    },
    "color": {
      "field": "Gender",
      "scale": {
        "domain": ["Male", "Female"],
        "range": ["#1f77b4", "#ff7f0e"]
      },
      "title": "Gender"
    }
  },
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}
