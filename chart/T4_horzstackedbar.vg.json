{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Distribution of Study Fields by Gender", 
    "fontSize": 20,
    "offset": 5
  },
  "width": 690,
  "height": 410,
  "data": {
    "url": "https://raw.githubusercontent.com/VincentG03/Data-Visualisation-2/refs/heads/main/data/T4.csv",
    "format": {"type": "csv"}
  },
  "selection": {
    "gender": {
      "type": "multi", 
      "fields": ["Gender"],
      "bind": "legend" 
    }
  },
  "transform": [
    {
      "filter": {
        "selection": "gender" 
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Qualification",
      "type": "nominal",
      "title": "  "
    },
    "x": {
      "field": "Number of Holders",
      "type": "quantitative",
      "title": "Number of Holders"
    },
    "color": {
      "field": "Gender",
      "scale": {
        "domain": ["Male", "Female"],
        "range": ["#86bfbe", "#B385C7"]
      },
      "title": "Gender"
    },
    "tooltip": [
      {"field": "Qualification", "title": "Study Field"},
      {"field": "Number of Holders", "title": "Number of Holders", "format": ","},
      {"field": "Gender", "title": "Gender"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}
