{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Distribution of Qualification Types in Australia",
    "offset": 30,
    "fontSize": 20
  },
  "width": 720,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/VincentG03/Data-Visualisation-2/refs/heads/main/data/T6.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "mark": {
        "type": "arc",
        "outerRadius": 150       
      },
      "encoding": {
        "theta": {"field": "Percentage", "type": "quantitative"},
        "order": {"field": "Percentage", "type": "quantitative", "sort": "descending"},
        "color": {
          "field": "Qualification Type",
          "type": "nominal",
          "scale": {
            "domain": ["Certificate", "Diploma", "Bachelor Degree", "Graduate Diploma", "Postgraduate Degree"],
            "range": ["#779AED", "#8AD172", "#E4DA7A", "#F6A974", "#F0727C"]
          },
          "legend": null
        },
        "tooltip": [
          {"field": "Qualification Type", "type": "nominal"},
          {
            "field": "Percentage",
            "type": "quantitative",
            "title": "Percentage (%)",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 15,
        "fill": "#779AED",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value": 560},
        "y": {"value": 190},
        "text": {"value": "Certificate"}
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 15,
        "fill": "#E4DA7A",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value": 220},
        "y": {"value": 350},
        "text": {"value": "Bachelor Degree"}
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 15,
        "fill": "#8AD172",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value": 170},
        "y": {"value": 150},
        "text": {"value": "Diploma"}
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 15,
        "fill": "#F6A974",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value": 400},
        "y": {"value": 30},
        "text": {"value": "Graduate Diploma"}
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 15,
        "fill": "#F0727C",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value": 250},
        "y": {"value": 40},
        "text": {"value": "Postgraduate Degree"}
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}
