{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Distribution of Qualification Types in Australia",
      "offset": 30
              },
    "width": 550,
    "height": 100,
    "data": {
      "url": "https://raw.githubusercontent.com/VincentG03/Data-Visualisation-2/refs/heads/main/data/T6.csv",
      "format": {"type": "csv"}
    },
    "layer": [
      {
        "mark": {"type": "arc", "tooltip": true, "outerRadius": 150},
        "encoding": {
          "theta": {"field": "Percentage", "type": "quantitative"},
          "color": {
            "field": "Qualification Type",
            "type": "nominal",
            "scale": {
              "domain": [
                "Postgraduate Degree",
                "Graduate Diploma",
                "Bachelor Degree",
                "Diploma",
                "Certificate"
              ],
              "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"]
            }
          },
          "tooltip": [
            {"field": "Qualification Type", "type": "nominal"},
            {
              "field": "Percentage",
              "type": "quantitative",
              "title": "Percentage",
              "format": ".2f"
            }
          ]
        }
      }
    ],
    "config": {
      "view": {"stroke": null},
      "axis": {"grid": false}
    }
  }
  